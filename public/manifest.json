{
  "manifest_version": 3,
  "name": "Ajimaru",
  "version": "0.0.1",
  "action": {
    "default_icon": {
      "16": "icon/extension_icon16.png",
      "32": "icon/extension_icon32.png"
    },
    "default_title": "あじまる",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "description": "配信開始時刻まで瞬時にジャンプできるChrome拡張",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "webNavigation",
    "history",
    "scripting"
  ],
  "host_permissions": [
    "https://*.youtube.com/"
  ],
  "default_locale": "en",
  "icons": {
    "16": "icon/extension_icon16.png",
    "32": "icon/extension_icon32.png",
    "48": "icon/extension_icon48.png",
    "128": "icon/extension_icon128.png"
  }
}
